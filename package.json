{
    "name": "javascript",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "nodemon ./bin/www"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "cookie-parser": "~1.4.3",
        "debug": "~2.6.9",
        "dotenv": "^5.0.1",
        "express": "~4.16.0",
        "express-session": "^1.15.6",
        "firebase": "^4.12.1",
        "handlebars": "^4.0.11",
        "hbs": "~4.0.1",
        "http-errors": "~1.6.2",
        "morgan": "~1.9.0",
        "node-mandrill": "^1.0.1",
        "node-sass-middleware": "0.11.0",
        "nodemailer": "^4.6.4"
    },
    "devDependencies": {
        "eslint": "^4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.11.0"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "newline-per-chained-call": [
                "off"
            ],
            "no-console": [
                "off"
            ],
            "prefer-arrow-callback": [
                "warn"
            ],
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "linebreak-style": [
                "off"
            ]
        }
    }
}
